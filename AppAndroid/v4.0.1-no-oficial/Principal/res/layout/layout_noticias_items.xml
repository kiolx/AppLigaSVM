<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_gravity="center"
    android:gravity="left" >

<!-- Imagen de la izquierda -->
<FrameLayout 
 android:id="@+id/framelayoutIzquierda" 
 android:layout_width="80dip"
 android:minHeight="70dip" 
 android:layout_height="wrap_content">
   

  <FrameLayout
       android:id="@+id/framelayoutImagenAutor"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >

		<ImageView
		    android:id="@+id/list_image_autor"
		    android:layout_width="50dip"
		    android:layout_height="50dip"
		    android:layout_gravity="top|center"
		    android:layout_marginTop="5dip"
		    android:layout_marginBottom="15dip"
		    android:antialias="true" />
</FrameLayout>
<FrameLayout
 android:id="@+id/framelayoutTextoAutor"
 android:layout_width="match_parent"
 android:layout_gravity="bottom|center"
 android:layout_height="wrap_content" > 		
    	 <TextView
		   android:id="@+id/autorString"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_gravity="center"
		   android:text="missing_autor"
		   android:textColor="#040404"
		   android:textSize="10dip"
		   android:textStyle="normal"
		   android:typeface="sans" />		
</FrameLayout>
</FrameLayout>

<!-- Texto Informativo -->
<FrameLayout
 android:id="@+id/framelayoutCentral"
 android:layout_width="match_parent"
 android:layout_height="70dip"
 android:layout_toRightOf="@id/framelayoutIzquierda" >

    <TextView
        android:id="@+id/textViewNoticia"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginRight="5dip"
        android:textSize="12dip"
        android:layout_height="wrap_content"
        android:text="Noticia de twitter" />
    
        <TextView
        android:id="@+id/textViewfecha"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="5dip"
        android:textSize="10dip"
        android:layout_height="wrap_content"
        android:text="fecha twitt" />

</FrameLayout>

<!-- Imagen de la derecha -->

    <View
    android:layout_width="fill_parent"
    android:layout_below="@id/framelayoutCentral"
    android:layout_height="2px"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#73aec6">        
    </View>
	       
</RelativeLayout>