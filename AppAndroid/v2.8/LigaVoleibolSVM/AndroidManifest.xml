 android:hardwareAccelerated="true" 
 android:logo="@drawable/log512x512">
        
        <activity android:screenOrientation="sensor" android:name=".Principal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
       <!-- Resto de Activity que hay que definir para que no de error la app-->
      
       <activity android:screenOrientation="sensor" android:name=".DirectoActivity" />
 
       <activity android:screenOrientation="portrait"   android:name=".DirectoDetallesActivity" />
       
       <activity android:screenOrientation="sensor" android:name=".EquiposActivity" />
   
       <activity android:screenOrientation="sensor" android:name=".ExtrasMenuActivity" />       
        
       <activity android:screenOrientation="sensor" android:name=".ClasificacionActivity" /> 
  
       <activity android:screenOrientation="sensor" android:name=".ExtrasItemInformacion" /> 
       
       <activity android:screenOrientation="sensor" android:name=".ExtrasItemSugerencias" />
       
