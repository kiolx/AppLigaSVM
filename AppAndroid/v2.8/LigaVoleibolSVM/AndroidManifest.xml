    android:versionCode="6"
    android:versionName="@string/appVersion" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

     <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    
<application
