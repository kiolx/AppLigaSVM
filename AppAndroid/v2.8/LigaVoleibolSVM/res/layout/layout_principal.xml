<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#106c39" >
        
<RelativeLayout
    android:id="@+id/linearPrincipal1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
 
 <LinearLayout
     android:id="@+id/linarInterior1"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:gravity="center_horizontal" >
    
 <TableLayout
     android:id="@+id/tablaPrincipal1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center_horizontal" >

    <TableRow
     android:id="@+id/tableRow1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" >

        <FrameLayout
        android:id="@+id/Frameview1"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:background="#02aede"
        android:layout_marginTop="5dip" >
        
             <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_gravity="center"
                android:src="@drawable/directopanel" />           
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:background="@drawable/image_bg"
                android:layout_height="wrap_content"
                android:text="En directo" />
        </FrameLayout>
              
        <FrameLayout
        android:id="@+id/Frameview2"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="5dip"
        android:background="#e76221" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_gravity="center"
                android:src="@drawable/clasificacionpanel" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:background="@drawable/image_bg"
                android:layout_height="wrap_content"
                android:text="Clasificacion" />            
        </FrameLayout>
              
     </TableRow>

     <TableRow
      android:id="@+id/tableRow2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" >
              
        <FrameLayout
        android:id="@+id/Frameview3"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:background="#17974d"
        android:layout_marginTop="5dip" >

              <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_gravity="center"
                android:src="@drawable/equipospanel" />              
            
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:background="@drawable/image_bg"
                android:layout_height="wrap_content"
                android:text="Equipos" />
        </FrameLayout>
    
        <FrameLayout
        android:id="@+id/Frameview4"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="5dip"
        android:background="#00bde3" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_gravity="center"
                android:src="@drawable/controlpanel" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:background="@drawable/image_bg"
                android:layout_height="wrap_content"
                android:text="Opciones" />

        </FrameLayout>
              
      </TableRow>
       
 </TableLayout>
 </LinearLayout>
 
  <LinearLayout
     android:id="@+id/linarInterior2"
     android:layout_width="match_parent"
     android:layout_height="100dip"
     android:layout_below="@id/linarInterior1"> 
  </LinearLayout>
  
 <LinearLayout
     android:id="@+id/linarInterior3"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/linarInterior2"
     android:gravity="center_horizontal" >
     
       <ImageView
        android:id="@+id/viewLogo"
        android:layout_width="match_parent"
        android:layout_height="115dip"
        android:src="@drawable/logodefinitivo" />
            
 </LinearLayout>

</RelativeLayout>
</ScrollView>