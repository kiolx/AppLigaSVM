<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
  <FrameLayout
       android:id="@+id/frameLayoutJornadasContainer"
       android:layout_width="match_parent"
       android:layout_height="50dip"
       android:background="@drawable/fondo_titulo"
       android:layout_gravity="center" >
       
       <ImageButton
          android:id="@+id/flechaatras"
          android:layout_gravity="left|center"
          android:layout_marginLeft="20dip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@null"
          android:src="@drawable/flecha_izquierda" />

      <TextView
          android:id="@+id/textViewJornada"
          android:gravity="center"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="19sp"
          android:textStyle="bold"
          android:text="Jornada 0" />

      <ImageButton
          android:id="@+id/flechaadelante"
          android:layout_gravity="right|center"
          android:layout_marginRight="20dip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@null"
          android:src="@drawable/flecha_derecha" />

  </FrameLayout>
    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
</LinearLayout>